body {
    font-family: Orbitron;
    font-weight: normal;
    font-style: normal;
    font-size: 12px;
    background: #080075c9;
}

body.menu-window {
    border: 1px #7784ffc0;
    border-radius: 5px;
    color: #e0e0e0;
    padding: 20px 20px;
}

/******************************************************************************
 * Headings
 */

h1 {
    font-size: 20px;
    font-weight: bold;
    padding-bottom: 8px;
    padding-top: 16px;
    display: block;
}

h2 {
    font-size: 18px;
    font-weight: bold;
    padding-bottom: 8px;
    padding-top: 16px;
    display: block;
}

h3 {
    font-size: 16px;
    font-weight: bold;
    padding-bottom: 8px;
    padding-top: 16px;
    display: block;
}

h4 {
    font-size: 14px;
    font-weight: bold;
    padding-bottom: 8px;
    padding-top: 16px;
    display: block;
}

/******************************************************************************
 * Input
 */

input {
    padding: 4px 4px;
    margin: 4px;
    min-height: 20px;
    line-height: 1.2;
    border: 1px;
    border-color: #a1a1a1;
    border-radius: 4px;
    color: white;
    background: #2222227e;
    box-sizing: border-box;
}

input:focus {
    background: #3a3a3a7e;
}

input:hover {
    background: #3a3a3a7e;
}

input:checked {
    background: #dbdbdbd0;
}

input.checkbox {
    width: 20px;
    height: 20px;
    max-height: 20px;
    border-color: #a1a1a1;
    border-radius: 4px;
    margin: 0px;
    padding: 0px;
    vertical-align: middle;
    box-sizing: border-box;
}

input.text {
    flex: 1;
    border-color: #a1a1a1;
    margin: 0px;
    vertical-align: middle;
    box-sizing: border-box;
}

input.password {
    flex: 1;
    border-color: #a1a1a1;
    margin: 0px;
    vertical-align: middle;
    box-sizing: border-box;
}

input.range {
    flex: 1;
    border-color: #a1a1a1;
    margin: 0px;
    padding: 0px;
    height: 19px;
    box-sizing: border-box;
}

input.range sliderbar {
    background: #1f45697e;
    width: 20%;
    margin-top: 2px;
    height: 16px;
}

input.range sliderarrowdec {
    background: #1f45697e;
    width: 16px;
    height: 16px;
    margin-top: 2px;
    margin-left: 2px;
    border-radius: 2px 0px 0px 2px;
}

input.range sliderarrowinc {
    background: #1f45697e;
    width: 16px;
    height: 16px;
    margin-top: 2px;
    border-radius: 0px 2px 2px 0px;
}

input.range sliderarrowdec:active {
    background: #3a82c54f;
}

input.range sliderarrowinc:active {
    background: #3a82c54f;
}

input.range sliderarrowdec:hover {
    background: #40709e7e;
}

input.range sliderarrowinc:hover {
    background: #40709e7e;
}

input.range sliderbar:hover {
    background: #40709e7e;
}

input.range sliderbar:active {
    background: #3a82c54f;
}

/******************************************************************************
 * Select
 */

select {
    flex: 1;
    border-color: #a1a1a1;
    margin: 0px;
    vertical-align: middle;
    box-sizing: border-box;
    padding: 4px 6px;
    min-height: 20px;
    border: 1px;
    border-color: #a1a1a1;
    border-radius: 4px;
    background: #2222227e;
    color: #e0e0e0;
    box-sizing: border-box;
}

select:hover {
    background: #3a3a3a7e;
}

select:focus {
    background: #3a3a3a7e;
}

select option {
    background: #2222227e;
    color: #e0e0e0;
}

select option:hover {
    background: #3a3a3a7e;
}


/******************************************************************************
 * Flex Row
 */

div.flex_row {
    display: flex;
    flex-direction: row;
    margin: 4px;
}

div.flex_row>* {
    flex: 1;
    margin-top: 0px;
    margin-left: 0px;
    margin-bottom: 0px;
    margin-right: 4px;
}

div.flex_row>*:last-child {
    margin-right: 0px;
}


/******************************************************************************
 * Button
 */

button {
    padding: 4px;
    margin: 4px;
    border: 1px;
    border-color: #a1a1a1;
    border-radius: 4px;
    background: #1f45697e;
    display: block;
}

button:hover {
    background: #40709e7e;
}

button:active {
    background: #3a82c54f;
}


/******************************************************************************
 * Form Row
 */

.form_row {
    display: flex;
    flex-direction: row;
    color: #e0e0e0;
    align-items: center;
    margin: 4px;
}

.form_row span {
    vertical-align: middle;
    margin-right: 8px;
}

.form_row .sl_val {
    margin-left: 8px;
    margin-right: 0px;
    font-size: 12px;
    color: #e0e0e0;
}

/******************************************************************************
 * Scrollbox
 */

.scrollbox {
    width: 100%;
    height: 100%;
    overflow: hidden auto;
    z-index: 1;
    clip: always;
    display: block;
}

.scrollbox * {
    clip: always;
}

.scrollbox scrollbarvertical {
    width: 8px;
}

.scrollbox scrollbarvertical slidertrack {
    background: #2a2a2a;
    border-radius: 4px;
}

.scrollbox scrollbarvertical sliderbar {
    background: #a1a1a1;
    border-radius: 4px;
}

.scrollbox scrollbarvertical sliderbar:hover {
    background: #dbdbdbd0;
}

.scrollbox::after {
    position: absolute;
    right: 0;
    top: 0;
    width: 10px;
    height: 100%;
    background: transparent;
}